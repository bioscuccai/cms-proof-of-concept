extends ../layout.jade
block main
  form(action='/posts/new' method='post' enctype='multipart/form-data')
    p
      |Title:
      input(type="text" name="title")
    p
      |Intro:
      textarea(name="intro")
    p
      |Text:
      textarea(name="text")
    p
      |Tags:
      input#tags(type="text" name="tags")
    p
      |Photo:
      input(type='file' name='file')
    p
      |Available tags:
      each tag in tags
        a.tag-link(href="")
          =tag
        |&nbsp;
    p
      input(type='submit' value='New post')
block js
  script(type="text/javascript").
    $(".tag-link").on("click", function(e){
      e.preventDefault();
      var $this=$(this);
      $("#tags").val($("#tags").val()+$this.text()+",");
      return false;
    });